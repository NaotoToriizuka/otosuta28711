<%= stylesheet_link_tag "rooms/show", :media => "all" %>
<%= stylesheet_link_tag "shared/header", :media => "all" %>
<%= stylesheet_link_tag "shared/footer", :media => "all" %>
<%= render "shared/header" %>

<%# 教室の概要 %>
<div class="room-show">
  <div class="room-top">
    <h2><%= @music.prefecture.name %><%= @music.city %></h2> 
      <h1><%= @music.name %></h1>
    <p>所在地：<%= @music.prefecture.name %><%= @music.city %><%= @music.house_number %><%= @music.building_name %></p>
  </div>

  <div class="room-box">
    <div class="room-img-content">
      <div class="container">
        <div class="row">
          <div class="col-md-6">
            <% if @music.image.present? %>
            <%= image_tag @music.image, class:"room-box-img" %>
            <% end %>
          </div>
          <div class="col-md-6 ">
            <h5><%= @music.content %></h5>
          </div>
        </div>
      </div>
    </div>

    <div class="explanation">
      <div class="container ">
        <div class="row">
          <div class="col bg-light">教室名</div>
          <div class="col"><%= @music.name %></div>
          <div class="w-100"></div>
          <div class="col bg-light">教室カテゴリ</div>
          <div class="col">
            <% @genres.each do |genre| %>
              <%= genre.name %> 
            <% end %>
          </div>
        </div>
        <div class="row">
          <div class="col bg-light">所在地</div>
          <div class="col"><%= @music.post_code %><br><%= @music.prefecture.name %><%= @music.city %><%= @music.house_number %><%= @music.building_name %></div>
          <div class="w-100"></div>
          <div class="col bg-light">最寄り駅</div>
          <div class="col"><%= @music.station %></div>
        </div>
        <div class="row">
          <div class="col bg-light">駅徒歩（分）</div>
          <div class="col"><%= @music.walk %>分</div>
          <div class="w-100"></div>
          <div class="col bg-light">電話番号</div>
          <div class="col"><%= @music.phone_number %></div>
        </div>
        <div class="row">
          <div class="col bg-light">メールアドレス</div>
          <div class="col"><%= @music.mail %></div>
          <div class="w-100"></div>
          <div class="col bg-light">担当者</div>
          <div class="col"><%= @music.representative %></div>
        </div>
        <div class="row">
          <div class="col bg-light">営業時間</div>
          <div class="col"><%= @music.hour %></div>
          <div class="w-100"></div>
          <div class="col bg-light">定休日</div>
          <div class="col"><%= @music.holiday %></div>
        </div>
        <div class="row">
          <div class="col bg-light">オフィシャルサイト</div>
          <div class="col"><%= link_to @music.url, @music.url %></div>
          <div class="w-100"></div>
          <div class="col bg-light">定休日</div>
          <div class="col"><%= @music.holiday %></div>
        </div>
        <div class="row">
          <div class="col bg-light">授業料</div>
          <div class="col"><%= @music.fee %></div>
          <div class="w-100"></div>
          <div class="col bg-light">備考</div>
          <div class="col"><%= @music.remarks %></div>
        </div>
      </div>
    </div>

    <div class="container">
      <div class="row">
        <div class="col-md-4">
          <div class="room-btn-contents">
            <%= link_to 'もどる', rooms_path, class:"btn"%>
          </div>
        </div>
      <% if user_signed_in? && current_user.id == @music.user_id %>
        <div class="col-md-4">
          <%= link_to '教室情報の編集', edit_room_path(@music.id), method: :get, class: "btn" %>
        </div>
        <div class="col-md-4">
          <%= link_to '教室情報の削除', music_path(@music.id), method: :delete, class: "btn" %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>

<%= render "shared/footer" %>